{
  "compilerOptions": {
    "lib": ["dom", "es2017", "webworker"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "src"
  },
  "include": ["src/**/*", "webpack.config.ts"],
  "exclude": ["node_modules", "**/*.js"]
}
